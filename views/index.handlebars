<div class="container"> 
  <div class="jumbotron"> 
    <img src="/assets/images/burger.jpg" width="300" height="300"> 
    <h1> Eat-Da-Burger! </h1>
  </div>

  {{!-- burger list before being eaten --}}
  <div class="row">
    <div class="col-md-4 col-md-offset-1">
      <div class="panel-panel default">
        <ul class="list-group">
        {{#each burgers}}
          {{#unless this.devoured}}
          <li class="list-group-item">
            <div class="input-group">
              <p class="lead">{{this.id}}. {{this.burger_name}} </p>
              <span class="input-group-btn">
                <form action="/{{this.id}}?_method=PUT" method="POST">
                  <input type="hidden" name="devoured" value="true">
                  <button class="btn btn-default btn-lg" id="devour" type="submit"> DEVOUR IT! </button>
                </form>
              </span>
            </div>
          </li>
          {{/unless}}
        {{/each}}
        </ul>
    </div>
  </div>


    {{!-- burger list after being eaten --}}
  <div class="row">
    <div class="col-md-4 col-md-offset-2">
        <ul class="list-group">
        {{#each burgers}}
          {{#if this.devoured}}
          <li class="list-group-item">
            <p class="lead">{{this.id}}. {{this.burger_name}} </p>
          </li>
          {{/if}}
        {{/each}}
        </ul>
      </div>
    </div>

  <div class="col-md-8 col-md-offset-2">
    <p class="lead" id="burgerName"> Enter the name of the burger you want to eat & click the 'Add Burger' button. </p>

    {{!-- section to add burgers --}}
    <form class="create-update-form" action="/create" method="POST">

      <div class="form-group">
        <textarea class="form-control input-lg" type="text" name="burger_name" rows="3"> </textarea>
      </div>

      <button class="btn btn-default btn-lg" type="submit" id="button">Add Burger!</button>
    </form>
  </div>
  
</div>


